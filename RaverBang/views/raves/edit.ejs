<% include ../partials/header %>
<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1>Edit <%= rave.name %></h1>
    </div>
    <div class="col-sm-8 col-md-6 col-lg-4">
        <form action="/raves/<%= rave._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="rave[name]" value="<%= rave.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="rave[price]"
                       value="<%= rave.price %>"
                       min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="rave[image]"
                       value="<%= rave.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="rave[description]"
                       value="<%= rave.description %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/raves">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>

